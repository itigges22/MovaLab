# Supabase Configuration
# Get these values from your Supabase project settings (Settings > API)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-supabase-publishable-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Configuration

# Rate Limiting (Optional - requires Upstash Redis)
# Get free account at: https://upstash.com/
#UPSTASH_REDIS_REST_URL=your_upstash_redis_url
#UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Enable rate limiting in development (default: false, auto-enabled in production)
# ENABLE_RATE_LIMIT=true

# Logging Configuration
# LOG_LEVEL options: debug, info, warn, error
# Default: 'debug' in development, 'error' in production
LOG_LEVEL=debug

# Environment
NODE_ENV=development

# ============================================
# Demo Mode Configuration
# ============================================
# Enable demo mode for public demos (disables destructive actions, shows quick-login)
# See docs/setup/DEMO_MODE.md for full documentation
# Live demo: https://demo.movalab.dev
#NEXT_PUBLIC_DEMO_MODE=true
#DEMO_MODE=true

# Demo Data Reset Cron Job (Vercel only)
# These are required for the automatic daily demo data reset
# Generate CRON_SECRET with: openssl rand -hex 32
# Get service role key from: Supabase Dashboard > Settings > API
#CRON_SECRET=your-generated-cron-secret
#DEMO_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
